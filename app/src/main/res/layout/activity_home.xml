<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_background"
        android:contentDescription="Pozadina" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:background="#AAE6F1E8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:backgroundTint="#2C5F2D"
                android:textColor="#FFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2C5F2D"
                android:textColor="#FFF"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StudentEventsApp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#2C5F2D"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/buttonViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pregledaj dogaÄ‘aje"
            android:backgroundTint="#2C5F2D"
            android:textColor="#FFF"
            android:layout_below="@id/appTitle"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</FrameLayout>